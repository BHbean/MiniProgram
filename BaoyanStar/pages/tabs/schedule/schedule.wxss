@import "/colorui/main.wxss";
@import "/colorui/icon.wxss";

:host {
	background-color: white;
}

.background {
	height: 100%;
	background-image: linear-gradient(45deg, #0081ff, #1cbbb4);
}

.top-bar {
	min-height: 75rpx;
	text-align: center;
}

.top-title {
	padding: 1.0rem;
	margin-bottom: 0%;
	padding-bottom: 0%;
}

.top-part {
	text-align: center;
	overflow: hidden;
	margin-right: 0rpx;
	margin-left: 0rpx;
	border-radius: 15rpx 15rpx 0 0;
}

.bottom-dashed-border {
	top: 0;
	display: inline-block;
	width: 80%;
	background: rgb(241, 241, 241);
	height: 5rpx;
	border-radius: 5rpx;
}

.applied-camps {
	display: flex;
	flex-wrap: wrap;
	justify-content: center;
}

.picker {
	display: flex;
}

.picker-title {
	justify-content: flex-end;
	align-items: center;
}

.picker-date {
	justify-content: flex-end;
	align-items: center;
}

.schedule-part {
	background-color: white;
	min-height: 1000rpx;
}

.schedule-title {
	box-shadow: 0rpx -8rpx 20rpx #f3f1f1;
	border-radius: 30rpx 30rpx 0 0;
}

.huge-margin-bottom {
	margin-bottom: 90rpx;
}